<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:text="Quantos anos faltam pra eu me aposentar?"
        android:textColor="@android:color/system_accent1_700"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_biological_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="60dp"
        android:text="Assinale seu sexo biolÃ³gico:"
        android:textColor="#49454F"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radio_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="30dp" >

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/holo_green_light"
            android:checked="true"
            android:text="Feminino"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#49454F"
            android:textColorLink="#CDDC39"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:textColor="#49454F"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/txt_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="60dp"
        android:text="Indique sua idade:"
        android:textColor="#49454F"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/input_age"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:ems="18"
        android:inputType="number" />


    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="#CDDC39"
        android:text="Calcular"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="40dp"
        android:text="Resultado:"
        android:textSize="20sp"
        />


    <Button
        android:id="@+id/btn_back"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:text="voltar" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp" />

</LinearLayout>